<h3>Edit Story</h3>
<div class="row">
  <form action="/stories/<%= stories._id %>" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT" />
    <div class="row">
      <div class="input-field">
        <input
          type="text"
          id="title"
          name="title"
          value="<%= stories.title %>"
        />
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select id="status" name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea id="body" name="body"><%=stories.body%></textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/stories/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>
